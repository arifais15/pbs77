
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // For this prototype, we check the user's email to determine if they are an admin.
    // In a production app, this should check for a custom claim set from a backend.
    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'admin@example.com';
    }

    // --- Rules ---

    // User Profiles
    match /users/{userId} {
      // Admins can read any profile; users can read their own.
      allow get: if isOwner(userId) || isAdmin();
      
      // Admins can list all users.
      allow list: if isAdmin();
      
      // An owner can create their own user document.
      // Admins can create other users.
      allow create: if isOwner(userId) || isAdmin();
      
      // Users can update their own info.
      // Admins can update any user's info.
      allow update: if isOwner(userId) || isAdmin();
                    
      // Only admins can delete.
      allow delete: if isAdmin();
    }
    
    // Consumer Data
    match /consumers/{consumerId} {
      // Allow authenticated users to read consumer data for search functionality.
      allow read: if isSignedIn();
      // Allow admins to create, update, and delete consumer data.
      allow write: if isAdmin();
    }

    // Letters (Subcollection of Users)
    match /users/{userId}/letters/{letterId} {
      // This is private data. Only the owner can read or write these.
      allow read, write: if isOwner(userId);
    }

    // Public Categories
    match /categories/{categoryId} {
      allow read: if isSignedIn();
      allow write: if false; // Only manageable via Admin SDK/Console
    }

    // Activity Logs
    match /letter-activities/{activityId} {
        // Enforce that the 'createdBy' field matches the logged-in user's email
        allow create: if isSignedIn() && request.resource.data.createdBy == request.auth.token.email;
        
        // Users can only see their own logs; Admins can see all
        allow get: if isAdmin() || (isSignedIn() && resource.data.createdBy == request.auth.token.email);
        
        // Admins can list all activities.
        allow list: if isAdmin();
        
        allow update: if false;
        // Admins can delete any log, users can delete their own.
        allow delete: if isAdmin() || (isSignedIn() && resource.data.createdBy == request.auth.token.email);
    }
  }
}
